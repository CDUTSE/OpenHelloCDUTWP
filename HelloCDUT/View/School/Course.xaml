            <TextBlock x:Name="txtDay6" Text="6" Grid.Row="1" Grid.Column="6" Style="{StaticResource CTitleCss}" />
            <TextBlock x:Name="txtDay7" Text="7" Grid.Row="1" Grid.Column="7" Style="{StaticResource CTitleCss}" />
