                        <Run FontSize="20">学分：</Run><Run x:Name="runCredit" FontSize="20"/><LineBreak/>
                        <Run FontSize="20">备注：</Run><Run x:Name="runNote" FontSize="20"/><LineBreak/>
                        <Run FontSize="20">学时：</Run><Run x:Name="runPeriod" FontSize="20"/><LineBreak/>
                            </TextBlock>
                        </Grid>
                    </Border>
                </Border>
            </Popup.Child>
        </Popup>

