                </ListView>
            </Grid>
            
            <!--邮箱输入Popup-->
            <Popup x:Name="emailPopup" 
              Margin="0,-27,0,0"
               VerticalAlignment="Top"
               Height="250"
               IsLightDismissEnabled="True" 
               IsOpen="False"
               HorizontalOffset="0"
               UseLayoutRounding="True"
               VerticalOffset="0"
               Grid.Row="0"
               Grid.RowSpan="2"
               >
                <Popup.ChildTransitions>
                    <TransitionCollection>
                        <PaneThemeTransition Edge="Top"></PaneThemeTransition>
                        <!--<PopupThemeTransition FromVerticalOffset="332"/>-->
                        <!--<EntranceThemeTransition IsStaggeringEnabled="True"/>-->
                    </TransitionCollection>
                </Popup.ChildTransitions>
                <Popup.Child>
                    <Grid x:Name="popGrid" VerticalAlignment="Top"  Background="Black" Opacity="0.9" HorizontalAlignment="Stretch">
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>

                        </Grid.RowDefinitions>
                        <TextBlock x:Name="txtBlockName"
                               Grid.Row="0"
                               FontSize="25"
                               Margin="10,20,10,0"
                               Foreground="White"/>
                        <TextBlock Grid.Row="1" x:Name="txtBlockMac" 
                               FontSize="20" 
                               Margin="10,0,10,0"
                               Foreground="White"/>
                        <TextBox x:Name="emailTextBox" Grid.Row="2" 
                             Margin="10,0,10,10"
                             PlaceholderText="请输入邮箱"
                             Style="{ThemeResource LightTextBox}"/>
                        <Grid Grid.Row="3"  Margin="10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Button Content="解除绑定" 
                                x:Uid="UYes"
                                    x:Name="yesBtn"
                                Grid.Column="0" 
                                RequestedTheme="Dark"
                                HorizontalAlignment="Stretch"  
                                Margin="0,0,5,0"
                                    Click="yesBtn_Click"
                                Style="{ThemeResource LightButtonStyle}"
                                />
                            <Button Content="取消" 
                                    x:Name="cancleBtn"
                                x:Uid="UCancle"
                                Grid.Column="1" 
                                 RequestedTheme="Dark"
                                HorizontalAlignment="Stretch" 
                                Margin="5,0,0,0"
                                    Click="cancleBtn_Click"
                                Style="{ThemeResource LightButtonStyle}"
                                />
                        </Grid>

