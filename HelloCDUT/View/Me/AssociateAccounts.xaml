    <Page.Transitions>
        <TransitionCollection>
            <NavigationThemeTransition>
                <SlideNavigationTransitionInfo/>
            </NavigationThemeTransition>
        </TransitionCollection>
    </Page.Transitions>
    
    <Page.Resources>
        <Style x:Key="BindStyle" TargetType="Button" BasedOn="{StaticResource LightButtonStyle}">
