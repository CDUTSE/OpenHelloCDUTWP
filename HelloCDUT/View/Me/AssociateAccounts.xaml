            <StackPanel Grid.Row="0" Background="{ThemeResource AppThemeColorBrush}">
                <TextBlock x:Name="AppName" Text="关联账号" Style="{StaticResource PageTitleStyle}"/>
            </StackPanel>
            <!--内容-->
